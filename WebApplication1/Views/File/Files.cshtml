@using WebApplication1.Models
@{
    ViewBag.Title = "Files";
}

<head>
    <style type="text/css">
        .auto-style {
            color: #FFFFFF;
        }

        .t {
            text-align: center;
            vertical-align: middle;
        }
    </style>
</head>

<div class="well-sm">
    <p>
        Files
    </p>
</div>
<div style="height: 400px; overflow: auto;">
    <div class="well-sm">
        <table class="table table-condensed table-hover">
            <thead style="position: sticky;top: 0">
                <tr bgcolor="#222222" class="auto-style">
                    <th class="col-lg-8">File Name</th>
                    <th class="t, col-lg-2">Download Option</th>
                    <th class="t, col-lg-2">Delete Option</th>
                </tr>
            </thead>
            @foreach (FileModel file in Model)
            {
                <tr>

                    <td>@file.FileName</td>
                    <td>
                        <button class="btn-success">
                            @Html.ActionLink("Download", "Download",
                             new { fileName = file.FileName })
                        </button>
                    </td>
                    <td>
                        <button class="btn-danger">
                            @Html.ActionLink("Delete", "Delete",
                           new { fileName = file.FileName },
                           new { onclick = "return confirm('Are you sure you wish to delete this file?');" })
                        </button>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
