@using WebApplication1.Models
@{
    ViewBag.Title = "Images of any type";
}


<div class="container">
    <div class="row-sm">
        @foreach (FileModel file in Model)
        {

            <div class="card col" style="width: 18rem;">
                <img class="card-img-top" src="~/Media/Images/@file.FileName" style="height:100px; width:100px">
                <div class="card-body">
                    <h5 class="card-title">@file.FileName</h5>
                    <button class="btn btn-success">
                        @Html.ActionLink("Download", "Download",
                        new { fileName = file.FileName })
                    </button>
                    <button class="btn btn-danger">
                        @Html.ActionLink("Delete", "Delete",
                        new { fileName = file.FileName },
                        new { onclick = "return confirm('Are you sure you wish to delete this file  ');" })
                    </button>
                </div>
            </div>
        }
    </div>
</div>

